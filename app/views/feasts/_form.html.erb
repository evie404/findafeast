<%= form_for(@feast) do |f| %>
  <% if @feast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feast.errors.count, "error") %> prohibited this feast from being saved:</h2>

      <ul>
      <% @feast.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :users %>
    <%= f.text_field :user_tokens, data: { load: @feast.users }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :time %>
    <%= f.text_field :time, class: 'form-control' %>
  </div>

  <%= f.hidden_field :restaurant_id %>
  <div class="actions">
    <%= f.button 'Start Feast', class: 'btn btn-default' %>
  </div>
<% end %>
