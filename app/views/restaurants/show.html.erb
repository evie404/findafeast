<% content_for :outside_container do %>
  <div class="jumbotron restaurant-jumbotron" style="background-image: url('<%= @restaurant.cover_url%>'); background-size: 100% auto; background-opacity: 0.1;">
    <div class="container">
      <h1><%= @restaurant.name %></h1>
      <p><%= @restaurant.info_span %></p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-9">
    <p>
      <%= @restaurant.description %>
    </p>
    <p>
      <%= link_to 'Start a Feast', new_restaurant_feast_path(@restaurant), class: 'btn btn-default' %>
    </p>
  </div>
  <div class="col-md-3">
    <h4>Where to find?</h4>
    <p>
      <%= @restaurant.address %>
    </p>
    <p>
      <%= @restaurant.phone %>
    </p>
  </div>
</div>
